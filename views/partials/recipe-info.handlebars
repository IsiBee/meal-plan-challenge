<link rel="stylesheet" href="/css/container.css">


<div>
    <div class="draggable" data-value={{recipe_name}} draggable="true">

        <p class="title">
            {{recipe_name}}
        </p>
        <p class="subtitle">
            {{description}}
        </p>
        <p>
            {{prep_time}}
        </p>
        {{#if is_spicy}}
        <p>
            Spicy!
        </p>
        {{/if}}
    </div>

</div>







<script src="/js/container.js"></script>