<h4>Ingredients:</h4>
<ul class="ingredients-list">
    {{#each this}}
    <li class="ingredient">
        <div class="meta">
            {{#if quantity}}
            <span class="quantity">{{quantity}} </span>
            {{/if}}

            {{ingredient_name}}

            {{#if preparation}}
            <span class="preparation"> - {{preparation}}</span>
            {{/if}}
        </div>
    </li>
    {{/each}}
</ul>